extends ../layout

block content
  form(action='/users/save', method='POST', name='add-user', id='form-add-user')
    div(class='form-group')
      label Usuario
      input(type='hidden', id='id', name='id', value=user._id)
      input(class='form-control', type='text', id='username', name='usuario', placeholder='Usuario', value=user.usuario)
    div(class='form-group')
      label Nombre
      input(class='form-control',type='text', id='name', name='nombre', placeholder='Nombre', value=user.nombre)
    div(class='form-group')
      label Apellido
      input(class='form-control',type='text', id='last-name', name='apellido', placeholder='Apellido', value=user.apellido)
    div(class='form-group')
      label Edad
      input(class='form-control',type='Number', id='age', name='edad', placeholder='Edad', value=user.edad)
    div(class='form-group')
      label Password
      input(class='form-control',type='password', id='password', name='password', placeholder='Contrase√±a', value=user.password)
    input(type='submit', value='Guardar', class='btn btn-success')
